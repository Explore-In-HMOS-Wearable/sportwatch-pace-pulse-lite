{
  "app": {
	"bundleName": "com.hmosdemos.pacepulselite",
	"vendor": "hmosdemos",
	"version": {
	  "code": 1000000,
	  "name": "1.0.0"
	}
  },
  "deviceConfig": {},
  "module": {
	"deviceType": [
	  "liteWearable"
	],
	"distro": {
	  "deliveryWithInstall": true,
	  "moduleName": "entry",
	  "moduleType": "entry"
	},
	"abilities": [
	  {
		"name": ".MainAbility",
		"srcLanguage": "js",
		"srcPath": "MainAbility",
		"icon": "$media:icon",
		"description": "$string:MainAbility_desc",
		"label": "$string:MainAbility_label",
		"type": "page"
	  }
	],
	"js": [
	  {
		"pages": [
			"pages/index/index",
			"pages/runPage/runPage",
			"pages/heartAlertPage/heartAlertPage"
		],
		"name": ".MainAbility"
	  }
	],
	  "reqPermissions": [
		  {
			  "name": "ohos.permission.READ_HEALTH_DATA",
			  "reason": "$string:heartRate_reason",
			  "usedScene": {
				  "ability": [
					  "default"
				  ],
				  "when": "always"
			  }
		  },
		  {
			  "name": "ohos.permission.ACTIVITY_MOTION",
			  "reason": "$string:pedometer_reason",
			  "usedScene": {
				  "ability": [
					  "default"
				  ],
				  "when": "always"
			  }
		  },
		  {
			  "name": "ohos.permission.VIBRATE",
			  "reason": "$string:heartRate_reason",
			  "usedScene": {
				  "ability": [
					  "default"
				  ],
				  "when": "always"
			  }
		  }
	  ]
  }
}